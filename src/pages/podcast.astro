---
import Layout from '../layouts/BaseLayout.astro';
import podcastData from '../data/podcasts.json';
---

<Layout title="Podcast - The Phin Side">
  <main class="max-w-4xl mx-auto py-12 px-6">
    {podcastData.map((ep) => (
      <div class="mb-10 bg-gray-900 rounded-2xl overflow-hidden shadow-xl border-b-4 border-miami-aqua">
        <div class="p-6">
          <span class="text-miami-orange font-bold text-sm">{ep.date}</span>
          <h2 class="text-white font-[Oswald] text-2xl uppercase italic mb-4">{ep.title}</h2>
          <p class="text-gray-400 text-sm mb-6">{ep.description}</p>
          
          <iframe 
            style="border-radius:12px" 
            src={`https://open.spotify.com/embed/episode/${ep.spotifyId}?utm_source=generator&theme=0`} 
            width="100%" 
            height="152" 
            frameBorder="0" 
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
            loading="lazy">
          </iframe>
        </div>
      </div>
    ))}
  </main>
</Layout>