---
import Layout from '../layouts/BaseLayout.astro';

// Liste des joueurs
const players = [
  { 
    name: "Jaylen Waddle", 
    number: "17", 
    position: "WR", 
    image: "/images/roster/waddle.png",
    status: "Star"
  },
  { 
    name: "Tua Tagovailoa", 
    number: "1", 
    position: "QB", 
    image: "/images/roster/tua.png",
    status: "Captain"
  },
  { 
    name: "Jevon Holland", 
    number: "8", 
    position: "S", 
    image: "/images/roster/holland.png",
    status: "Defense"
  },
  // Ajoute tes autres photos ici...
];
---

<Layout title="Roster - The Phin Side">
  <main class="max-w-7xl mx-auto py-12 px-6">
    <h1 class="text-4xl font-[Oswald] font-black italic uppercase text-miami-aqua mb-8 border-l-8 border-miami-orange pl-4">
      Effectif 2026
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {players.map((player) => (
        <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden border-b-4 border-miami-aqua hover:border-miami-orange transition-all duration-300 transform hover:-translate-y-2">
          
          <div class="aspect-[3/4] overflow-hidden bg-gray-200">
            <img 
              src={player.image} 
              alt={player.name} 
              class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition duration-500"
            />
            <div class="absolute top-4 left-4 bg-miami-aqua text-white font-[Oswald] font-bold text-xl px-3 py-1 rounded-md shadow-md">
              #{player.number}
            </div>
          </div>

          <div class="p-5">
            <h3 class="font-[Oswald] font-bold text-2xl uppercase italic text-gray-900 group-hover:text-miami-aqua transition">
              {player.name}
            </h3>
            <div class="flex justify-between items-center mt-2">
              <span class="text-sm font-bold text-gray-500 uppercase tracking-widest">{player.position}</span>
              <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded uppercase font-black">{player.status}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>