---
import BaseLayout from '@/layouts/BaseLayout.astro';

// Tu peux organiser tes données par groupes
const offense = [
  { name: "Tua Tagovailoa", pos: "QB", exp: "6", college: "Alabama" },
  { name: "Tyreek Hill", pos: "WR", exp: "10", college: "West Alabama" },
  { name: "Jaylen Waddle", pos: "WR", exp: "5", college: "Alabama" },
  { name: "Zack Kuntz", pos: "TE", exp: "3", college: "Old Dominion" }, //
];

const defense = [
  { name: "Jalen Ramsey", pos: "CB", exp: "10", college: "Florida State" },
  { name: "Miles Battle", pos: "CB", exp: "R", college: "Utah" }, //
];
---

<BaseLayout title="Roster Complet">
  <div class="max-w-6xl mx-auto py-12 px-4">
    <h1 class="text-5xl font-black text-miami-blue font-[Oswald] uppercase italic mb-10">Roster Complet 2026</h1>

    <h2 class="text-3xl font-bold text-miami-orange font-[Oswald] uppercase italic mb-4">Attaque</h2>
    <div class="overflow-x-auto mb-12">
      <table class="w-full text-left">
        <thead class="bg-miami-blue text-white uppercase text-sm">
          <tr>
            <th class="p-3">Joueur</th>
            <th class="p-3">Pos</th>
            <th class="p-3">Exp</th>
            <th class="p-3">College</th>
          </tr>
        </thead>
        <tbody>
          {offense.map(p => (
            <tr class="border-b hover:bg-gray-50">
              <td class="p-3 font-bold">{p.name}</td>
              <td class="p-3 text-miami-aqua font-bold">{p.pos}</td>
              <td class="p-3">{p.exp}</td>
              <td class="p-3 italic text-gray-500">{p.college}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <h2 class="text-3xl font-bold text-miami-orange font-[Oswald] uppercase italic mb-4">Défense</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-left">
        </table>
    </div>
  </div>
</BaseLayout>