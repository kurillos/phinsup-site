---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

// On r√©cup√®re uniquement les articles de la cat√©gorie "Analyse"
const analyses = (await getCollection('blog', ({ data }) => {
    return data.category === 'Analyse' && data.isDraft !== true;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Analyses Tactiques | PhinsUp.fr">
    <section>
        <div class="mb-10 border-l-8 border-miami-orange pl-6">
            <h1 class="text-4xl font-bold text-miami-blue font-[Oswald] italic uppercase tracking-tighter">
                Analyses <span class="text-miami-aqua">Tactiques</span>
            </h1>
            <p class="text-gray-500 italic mt-2">D√©cryptage, sch√©mas de jeu et scouting reports.</p>
        </div>

        {analyses.length > 0 ? (
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
                {analyses.map((post) => (
                    /* On r√©utilise le m√™me style que sur l'accueil */
                    <article class="group relative bg-white rounded-xl overflow-hidden shadow-md border border-gray-100 flex flex-col transition-all hover:shadow-xl">
                        <div class="h-48 overflow-hidden">
                            <img src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                        </div>
                        <div class="p-6">
                            <h2 class="text-2xl font-bold font-[Oswald] italic uppercase mb-3">
                                <a href={`/blog/${post.slug}/`} class="hover:text-miami-aqua transition-colors">
                                    {post.data.title}
                                </a>
                            </h2>
                            <p class="text-gray-600 text-sm line-clamp-2">{post.data.description}</p>
                        </div>
                    </article>
                ))}
            </div>
        ) : (
            <div class="bg-white p-12 rounded-2xl border-2 border-dashed border-gray-200 text-center">
                <span class="text-4xl mb-4 block">üèà</span>
                <p class="text-gray-500 font-medium italic">Le tableau noir est en pr√©paration. Revenez bient√¥t pour les premi√®res analyses tactiques.</p>
            </div>
        )}
    </section>
</BaseLayout>