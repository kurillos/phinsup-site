---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

// 1. Cette fonction est obligatoire : elle génère les URLs pour chaque article
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. On récupère les données de l'article (le titre, le texte Markdown, etc.)
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title}>
  <article class="max-w-3xl mx-auto py-10">
    {entry.data.heroImage && (
      <img 
        src={entry.data.heroImage} 
        alt={entry.data.title} 
        class="w-full h-64 max-h-[400px] md:h-96 object-cover rounded-xl mb-8 shadow-lg border-b-8 border-miami-orange"
      />
    )}

    <header class="mb-8">
      <span class="text-miami-orange font-bold uppercase tracking-widest text-sm italic">{entry.data.category}</span>
      <h1 class="text-5xl font-bold text-miami-aqua mt-2 font-[Oswald] italic uppercase">{entry.data.title}</h1>
      <p class="text-gray-400 mt-4 border-l-2 border-miami-aqua pl-4 italic">
        Publié le {entry.data.pubDate.toLocaleDateString('fr-FR')}
      </p>
    </header>

    <div class="prose prose-lg max-w-none prose-headings:text-miami-blue prose-p:text-gray-800 prose-strong:text-miami-orange">
      <Content />
    </div>

    <footer class="mt-12 pt-6 border-t border-gray-100">
      <a href="/blog" class="text-miami-aqua hover:text-miami-orange font-bold transition-colors">
        ← Retour aux articles
      </a>
    </footer>
  </article>
</BaseLayout>