---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

// 1. Cette fonction est obligatoire : elle génère les URLs pour chaque article
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. On récupère les données de l'article (le titre, le texte Markdown, etc.)
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title}>
  <article class="max-w-4xl mx-auto py-10 px-4"> {entry.data.heroImage && (
      <img 
        src={entry.data.heroImage} 
        alt={entry.data.title} 
        class="w-full h-auto max-h-[500px] object-contain bg-gray-50 rounded-xl mb-8 shadow-lg border-b-8 border-miami-orange"
      />
    )}

    <header class="mb-8">
      <div class="flex items-center gap-3 mb-2">
        <span class="bg-miami-orange text-white px-3 py-1 rounded text-xs font-bold uppercase italic">
          {entry.data.category}
        </span>
          {entry.data.tags && Array.isArray(entry.data.tags) && entry.data.tags.map(tag => (
          <span class="text-gray-400 text-xs italic">#{tag}</span>
        ))}
      </div>
      
      <h1 class="text-4xl md:text-6xl font-extrabold text-miami-aqua mt-2 font-[Oswald] italic uppercase leading-tight">
        {entry.data.title}
      </h1>
      
      <p class="text-gray-400 mt-6 border-l-4 border-miami-aqua pl-4 italic">
        Publié le {entry.data.pubDate.toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' })}
      </p>
    </header>

    <div class="prose max-w-none 
      prose-headings:mt-12 prose-headings:mb-6 
      prose-p:mb-8 prose-p:leading-loose
      prose-li:mb-4
      prose-headings:text-miami-blue prose-headings:font-[Oswald] prose-headings:italic prose-headings:uppercase 
      prose-strong:text-miami-orange">
    <Content />
    </div>

    <footer class="mt-12 pt-8 border-t border-gray-200">
      <a href="/blog" class="inline-flex items-center gap-2 text-miami-aqua hover:text-miami-orange font-bold transition-all hover:-translate-x-1">
        ← Retour aux articles
      </a>
    </footer>
  </article>
</BaseLayout>