---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

// Récupère tous les articles qui ne sont pas des brouillons et trie par date
const posts = (await getCollection('blog', ({ data }) => {
	return data.isDraft !== true;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout>
	<section>
    <div class="flex items-center space-x-4 mb-10 border-l-8 border-miami-orange pl-6">
        <h1 class="text-4xl font-bold text-miami-blue font-[Oswald] italic uppercase tracking-tighter">
            L'actualité des <span class="text-miami-aqua">Phins</span>
        </h1>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
        {posts.map((post) => (
            <article class="group relative bg-white rounded-xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-500 border border-gray-100 flex flex-col">
                <div class="relative h-52 overflow-hidden">
                    <img 
                        src={post.data.heroImage || "/images/hard-rock-stadium.png"} 
                        alt={post.data.title} 
                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-miami-blue/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-end p-4">
                        <span class="text-white font-bold text-sm italic">Lire l'article →</span>
                    </div>
                </div>

                <div class="p-6 flex-grow flex flex-col">
                    <div class="flex items-center justify-between mb-3">
                        <span class="bg-miami-aqua/10 text-miami-aqua text-[10px] font-black uppercase tracking-widest px-2 py-1 rounded-md border border-miami-aqua/20">
                            {post.data.category}
                        </span>
                        <span class="text-gray-400 text-xs font-medium">
                            {post.data.pubDate.toLocaleDateString('fr-FR')}
                        </span>
                    </div>

                    <h2 class="text-2xl font-bold text-gray-900 group-hover:text-miami-aqua transition-colors duration-300 font-[Oswald] leading-tight mb-3">
                        <a href={`/blog/${post.slug}/`}>
                            <span class="absolute inset-0"></span> {post.data.title}
                        </a>
                    </h2>

                    <p class="text-gray-600 text-sm line-clamp-3 mb-4 leading-relaxed">
                        {post.data.description}
                    </p>
                    
                    <div class="mt-auto pt-4 border-t border-gray-50 flex items-center text-miami-orange font-bold text-xs uppercase tracking-tighter italic">
                        <span>Par {post.data.author || "PhinsUp Staff"}</span>
                    </div>
                </div>
            </article>
        ))}
    </div>
</section>
</BaseLayout>