---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import TwitterFeed from '@/components/TwitterFeed.astro';
import season2025 from '../data/results2025.json';

const lastGame = season2025.filter(g => g.scorePhins !== null).pop();

// 3. Récupération des articles
const posts = (await getCollection('blog', ({ data }) => {
    return data.isDraft !== true;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Accueil">
    
    {lastGame && (
    <section class="mb-12">
        <div class="bg-slate-900 rounded-2xl overflow-hidden shadow-xl border-b-4 border-miami-aqua flex flex-col md:flex-row">
            <div class="bg-miami-aqua p-6 flex flex-col justify-center items-center md:items-start text-white md:w-1/4">
                <span class="text-[10px] font-black uppercase tracking-[0.2em] opacity-80">Dernier Match</span>
                <h2 class="text-2xl font-black italic uppercase leading-none mt-1 font-[Oswald]">{lastGame.week}</h2>
                <p class="text-[10px] font-bold mt-2 opacity-70 italic">{lastGame.date}</p>
            </div>

            <div class="flex-grow p-6 flex items-center justify-around bg-gradient-to-r from-slate-900 to-slate-800">
                <div class="flex flex-col items-center">
                    <img src="https://static.www.nfl.com/t_q-best/league/api/clubs/logos/MIA" class="w-14 h-14 object-contain" alt="Miami Dolphins" />
                    <span class="text-white font-bold text-[10px] uppercase mt-2 tracking-widest italic">Dolphins</span>
                </div>

                <div class="text-center px-4">
                    <div class="text-4xl md:text-5xl font-black text-white flex items-center gap-4 font-[Oswald] italic">
                        <span class={lastGame.result === 'W' ? 'text-miami-aqua' : 'text-white'}>{lastGame.scorePhins}</span>
                        <span class="text-slate-600 text-2xl">-</span>
                        <span class={lastGame.result === 'L' ? 'text-miami-orange' : 'text-white'}>{lastGame.scoreOpp}</span>
                    </div>
                    {lastGame.slug && (
                        <a href={`/blog/${lastGame.slug}`} class="inline-block mt-4 text-[9px] font-black text-miami-aqua hover:text-white uppercase tracking-widest border border-miami-aqua/30 px-4 py-1.5 rounded-full transition-all">
                            Lire l'analyse →
                        </a>
                    )}
                </div>

                <div class="flex flex-col items-center">
                    <img src={lastGame.logo} class="w-14 h-14 object-contain" alt={lastGame.opponent} />
                    <span class="text-white font-bold text-[10px] uppercase mt-2 tracking-widest italic">{lastGame.opponent.split(' ').pop()}</span>
                </div>
            </div>
        </div>
    </section>
    )}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <section>
                <div class="flex items-center justify-between mb-8 border-l-8 border-miami-orange pl-4">
                    <h2 class="text-3xl font-bold text-miami-blue font-[Oswald] uppercase italic">L'actualité des Phins</h2>
                    <a href="/blog" class="text-miami-aqua font-bold hover:underline italic">Voir tout →</a>
                </div>

                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2"> {posts.map((post) => (
                        <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all border border-gray-100 group relative flex flex-col h-full">
                            <a href={`/blog/${post.slug}/`} class="flex flex-col h-full">
                                <div class="h-56 overflow-hidden relative bg-miami-blue/5 border-b border-gray-100"> 
                                    <img 
                                        src={post.data.heroImage || "/images/hard-rock-stadium.png"} 
                                        alt={post.data.title} 
                                        class="w-full h-full object-contain p-2 group-hover:scale-105 transition-transform duration-300" 
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                                        <span class="text-white text-xs font-bold italic">Lire l'article →</span>
                                    </div>
                                </div>
                                <div class="p-5 flex-grow flex flex-col">
                                    <h3 class="text-xl font-bold mt-2 group-hover:text-miami-aqua transition-colors line-clamp-2 font-[Oswald] uppercase italic leading-tight">
                                        {post.data.title}
                                    </h3>
                                    <p class="text-gray-600 mt-3 text-sm line-clamp-3">
                                        {post.data.description}
                                    </p>
                                    <div class="mt-auto pt-4 border-t border-gray-50 flex items-center text-miami-orange font-bold text-[10px] uppercase italic">
                                        <span>Par Cyril pour PhinsUp Staff</span>
                                    </div>
                                </div>
                            </a>
                        </article>
                    ))}
                </div>
            </section>
        </div>

        <aside class="w-full lg:col-span-1">
            <div class="sticky top-24">
                <TwitterFeed />
            </div>
        </aside>
    </div>
</BaseLayout>