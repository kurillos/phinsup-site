---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import TwitterFeed from '@/components/TwitterFeed.astro';

// R√©cup√®re les articles et les trie par date (du plus r√©cent au plus ancien)
const posts = (await getCollection('blog', ({ data }) => {
    return data.isDraft !== true;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Accueil">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <section>
                <div class="flex items-center justify-between mb-8 border-l-8 border-miami-orange pl-4">
                    <h2 class="text-3xl font-bold text-miami-blue font-[Oswald] uppercase italic">L'actualit√© des Phins</h2>
                    <a href="/blog" class="text-miami-aqua font-bold hover:underline italic">Voir tout ‚Üí</a>
                </div>

                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    {posts.map((post) => (
                        <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all border border-gray-100 group relative flex flex-col h-full">
                        {/* Le lien entoure TOUTE la carte proprement */}
                        <a href={`/blog/${post.slug}/`} class="flex flex-col h-full">
                        
                        {/* UN SEUL CADRE IMAGE : h-64 pour voir Zack Kuntz et Hafley en entier */}
                        <div class="h-64 overflow-hidden relative bg-miami-blue/5 border-b border-gray-100"> 
                            <img 
                                src={post.data.heroImage || "/images/hard-rock-stadium.png"} 
                                alt={post.data.title} 
                                class="w-full h-full object-contain p-2 group-hover:scale-105 transition-transform duration-300" 
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                                <span class="text-white text-xs font-bold italic">Lire l'article ‚Üí</span>
                            </div>
                        </div>

                        <div class="p-5 flex-grow flex flex-col">
                            <div class="flex items-center justify-between mb-3">
                                {post.data.category === 'Breaking News' ? (
                                    <span class="relative flex h-6 w-max">
                                        <span class="animate-ping absolute inline-flex h-full w-full rounded-md bg-red-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-md bg-red-600 px-2 py-1 text-[10px] font-black uppercase tracking-widest text-white border border-red-700">
                                            üö® {post.data.category}
                                        </span>
                                    </span>
                                ) : post.data.category === 'Analyse' ? (
                                    <span class="bg-miami-orange/10 text-miami-orange text-[10px] font-black uppercase tracking-widest px-2 py-1 rounded-md border border-miami-orange/30">
                                        üìä {post.data.category}
                                    </span>
                                ) : (
                                    <span class="bg-miami-aqua/10 text-miami-aqua text-[10px] font-black uppercase tracking-widest px-2 py-1 rounded-md border border-miami-aqua/20">
                                        üèà {post.data.category}
                                    </span>
                                )}
                                
                                <span class="text-gray-400 text-[10px] font-bold">
                                    {post.data.pubDate.toLocaleDateString('fr-FR')}
                                </span>
                            </div>

                            <h3 class="text-xl font-bold mt-2 group-hover:text-miami-aqua transition-colors line-clamp-2 font-[Oswald] uppercase italic leading-tight">
                                {post.data.title}
                            </h3>
                            
                            <p class="text-gray-600 mt-3 text-sm line-clamp-3 leading-relaxed">
                                {post.data.description}
                            </p>

                            {post.data.tags && (
                                <div class="flex flex-wrap gap-2 mt-3">
                                    {post.data.tags.slice(0, 3).map(tag => (
                                        <span class="text-[9px] text-miami-aqua/70 font-bold uppercase tracking-tighter">#{tag}</span>
                                    ))}
                                </div>
                            )}

                            <div class="mt-auto pt-4 border-t border-gray-50 flex items-center text-miami-orange font-bold text-[10px] uppercase italic">
                                <span>Par Cyril pour PhinsUp Staff</span>
                            </div>
                        </div>
                    </a>
                </article>
            ))}
        </div>
    </section>
    </div>
    <aside class="w-full">
        <div class="sticky top-24">
            <TwitterFeed />
        </div>
    </aside>
</div>
</BaseLayout>