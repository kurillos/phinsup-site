---
import Layout from '../layouts/BaseLayout.astro';

// Simulation des donn√©es avec les marqueurs (scorers)
const season2025 = [
  {
    week: "Week 1",
    opponent: "Jacksonville Jaguars",
    logo: "https://static.www.nfl.com/t_q-best/league/api/clubs/logos/JAX",
    scorePhins: 20,
    scoreOpp: 17,
    result: "W",
    date: "08/09/2024",
    scorers: ["T. Hill", "J. Waddle", "J. Sanders (2 FG)"],
    slug: "victoire-face-aux-jaguars"
  },
  {
    week: "Week 2",
    opponent: "Buffalo Bills",
    logo: "https://static.www.nfl.com/t_q-best/league/api/clubs/logos/BUF",
    scorePhins: 10,
    scoreOpp: 31,
    result: "L",
    date: "13/09/2024",
    scorers: ["D. Achane"],
    slug: "defaite-amere-contre-buffalo"
  },
];
---

<Layout title="R√©sultats - PhinsUp France">
  <main class="max-w-6xl mx-auto px-4 py-10">
    
    <header class="mb-12 border-b-4 border-[#f58220] pb-4">
      <h1 class="text-4xl font-black text-[#008e97] italic uppercase">R√©sultats de la Saison</h1>
      <p class="text-gray-600 mt-2">Suivez le parcours des Miami Dolphins, match apr√®s match.</p>
    </header>

    <div class="flex flex-wrap items-center gap-3 mb-10">
        <span class="bg-[#f58220] text-white text-[10px] font-black uppercase px-3 py-1 rounded-full tracking-tighter">
            Saison 2025-2026 Termin√©e
        </span>
        <span class="bg-slate-800 text-white text-[10px] font-black uppercase px-3 py-1 rounded-full tracking-tighter">
            Bilan Final : 11W - 6L
        </span>
        <span class="border-2 border-[#008e97] text-[#008e97] text-[10px] font-black uppercase px-3 py-1 rounded-full tracking-tighter">
            Playoffs : Wild Card
        </span>
    </div>

    <section class="mb-20">
      <div class="flex items-center gap-4 mb-8">
        <h2 class="text-2xl font-bold bg-[#008e97] text-white px-4 py-1 skew-x-[-12deg]">2025 - 2026</h2>
        <div class="h-[2px] flex-grow bg-gray-200"></div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-white border-b-4 border-[#008e97] p-4 rounded-lg shadow-sm text-center">
          <span class="block text-gray-500 text-[10px] uppercase font-bold tracking-widest">Victoires</span>
          <span class="text-3xl font-black text-slate-800">{season2025.filter(g => g.result === 'W').length}</span>
        </div>
        <div class="bg-white border-b-4 border-[#f58220] p-4 rounded-lg shadow-sm text-center">
          <span class="block text-gray-500 text-[10px] uppercase font-bold tracking-widest">D√©faites</span>
          <span class="text-3xl font-black text-slate-800">{season2025.filter(g => g.result === 'L').length}</span>
        </div>
        <div class="bg-white border-b-4 border-gray-300 p-4 rounded-lg shadow-sm text-center">
          <span class="block text-gray-500 text-[10px] uppercase font-bold tracking-widest">Classement</span>
          <span class="text-3xl font-black text-slate-800 italic">2nd</span>
          <span class="block text-[10px] text-gray-400 font-bold uppercase">AFC East</span>
        </div>
        <div class="bg-gradient-to-br from-[#008e97] to-[#005f66] p-4 rounded-lg shadow-sm text-center text-white">
          <span class="block text-white/70 text-[10px] uppercase font-bold tracking-widest">Playoffs</span>
          <span class="text-xl font-black italic uppercase leading-none">Qualified</span>
          <span class="block text-[10px] text-white/50 font-bold uppercase mt-1">Wild Card</span>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {season2025.map((game) => (
          <div class="bg-white border-2 border-gray-100 rounded-xl shadow-sm hover:shadow-md transition-all overflow-hidden flex flex-col">
            <div class={`text-center py-1 text-xs font-bold uppercase tracking-widest ${game.result === 'W' ? 'bg-[#008e97] text-white' : 'bg-[#f58220] text-white'}`}>
              {game.week} ‚Ä¢ {game.result === 'W' ? 'Victoire' : 'D√©faite'}
            </div>

            <div class="p-6 flex flex-col items-center flex-grow">
              <div class="flex items-center justify-between w-full">
                <div class="flex flex-col items-center flex-1">
                  <img src="https://static.www.nfl.com/t_q-best/league/api/clubs/logos/MIA" alt="Miami Dolphins" class="w-14 h-14 object-contain" />
                  <span class="text-[10px] font-bold mt-2 uppercase text-gray-400 tracking-tighter italic">Dolphins</span>
                </div>

                <div class="flex flex-col items-center px-4">
                  <span class={`text-2xl font-black tracking-tighter ${game.result === 'W' ? 'text-[#008e97]' : 'text-slate-800'}`}>
                    {game.scorePhins} - {game.scoreOpp}
                  </span>
                  <span class="text-[9px] text-gray-400 mt-1 uppercase font-semibold">{game.date}</span>
                </div>

                <div class="flex flex-col items-center flex-1">
                  <img src={game.logo} alt={game.opponent} class="w-14 h-14 object-contain" />
                  <span class="text-[10px] font-bold mt-2 uppercase text-gray-400 tracking-tighter text-center italic">{game.opponent.split(' ').pop()}</span>
                </div>
              </div>

              {game.scorers && (
                <div class="mt-4 flex flex-wrap justify-center gap-x-2 gap-y-1">
                  {game.scorers.map((player) => (
                    <span class="text-[9px] font-bold text-gray-500 bg-gray-50 border border-gray-100 px-2 py-0.5 rounded shadow-sm">
                      üèà {player}
                    </span>
                  ))}
                </div>
              )}

              <div class="mt-auto w-full border-t border-gray-50 pt-4 text-center">
                {game.slug ? (
                <a href={`/blog/${game.slug}`} class="group inline-flex items-center gap-2">
                    <span class="bg-[#008e97]/10 text-[#008e97] group-hover:bg-[#008e97] group-hover:text-white transition-all text-[9px] font-bold uppercase px-2 py-1 rounded border border-[#008e97]/20">
                        Lire l'Analyse
                    </span>
                    <span class="text-[#008e97] group-hover:translate-x-1 transition-transform">‚Üí</span>
                </a>
                ) : (
                    <span class="text-[9px] font-bold uppercase text-gray-300 tracking-widest">
                        Bient√¥t disponible
                    </span>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
       <div class="flex items-center gap-4 mb-8">
        <h2 class="text-2xl font-bold border-2 border-gray-300 text-gray-500 px-4 py-1 skew-x-[-12deg]">2024 - 2025</h2>
        <div class="h-[2px] flex-grow bg-gray-200"></div>
      </div>
      <p class="text-sm italic text-gray-500 text-center">Archives bient√¥t disponibles...</p>
    </section>

  </main>
</Layout>