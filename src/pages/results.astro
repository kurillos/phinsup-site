---
import Layout from '../layouts/BaseLayout.astro';
import season2025 from '../data/results2025.json';

// Tu pourras importer tes futures saisons ici
// import season2024 from '../data/results2024.json';
---

<Layout title="R√©sultats - PhinsUp France">
  <main class="max-w-6xl mx-auto px-4 py-10">
    
    <header class="mb-12 border-b-4 border-[#f58220] pb-4">
      <h1 class="text-4xl font-black text-[#008e97] italic uppercase">R√©sultats de la Saison</h1>
      <p class="text-gray-600 mt-2">Suivez le parcours des Miami Dolphins, match apr√®s match.</p>
    </header>

    {/* Section Saison 2025-2026 (D√©pli√©e par d√©faut) */}
    <details open class="group mb-12">
      <summary class="list-none cursor-pointer">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-2xl font-bold bg-[#008e97] text-white px-4 py-1 skew-x-[-12deg] flex items-center gap-2">
            2025 - 2026 
            <span class="text-sm font-normal opacity-80 group-open:rotate-180 transition-transform">‚ñº</span>
          </h2>
          <div class="h-[2px] flex-grow bg-[#008e97]/20"></div>
          <span class="bg-[#f58220] text-white text-[10px] font-black uppercase px-3 py-1 rounded-full">Saison Termin√©e</span>
        </div>
      </summary>

      {/* Stats de la saison */}
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-white border-b-4 border-[#008e97] p-4 rounded-lg shadow-sm text-center">
          <span class="block text-gray-500 text-[10px] uppercase font-bold tracking-widest">Victoires</span>
          <span class="text-3xl font-black text-slate-800">{season2025.filter(g => g.result === 'W').length}</span>
        </div>
        <div class="bg-white border-b-4 border-[#f58220] p-4 rounded-lg shadow-sm text-center">
          <span class="block text-gray-500 text-[10px] uppercase font-bold tracking-widest">D√©faites</span>
          <span class="text-3xl font-black text-slate-800">{season2025.filter(g => g.result === 'L').length}</span>
        </div>
        <div class="bg-white border-b-4 border-gray-300 p-4 rounded-lg shadow-sm text-center">
          <span class="block text-gray-500 text-[10px] uppercase font-bold tracking-widest">Classement</span>
          <span class="text-3xl font-black text-slate-800 italic text-[#008e97]">2nd</span>
        </div>
        <div class="bg-slate-800 p-4 rounded-lg shadow-sm text-center text-white">
          <span class="block text-white/50 text-[10px] uppercase font-bold tracking-widest">Playoffs</span>
          <span class="text-xl font-black italic uppercase leading-none">Qualified</span>
        </div>
      </div>

      {/* Grille des matchs */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {season2025.map((game) => (
          <div class="bg-white border-2 border-gray-100 rounded-xl shadow-sm hover:shadow-md transition-all flex flex-col overflow-hidden">
            <div class={`text-center py-1 text-xs font-bold uppercase tracking-widest ${game.result === 'W' ? 'bg-[#008e97] text-white' : 'bg-[#f58220] text-white'}`}>
              {game.week} ‚Ä¢ {game.result === 'W' ? 'Victoire' : 'D√©faite'}
            </div>

            <div class="p-6 flex flex-col items-center flex-grow">
              
              {/* NOUVEAU : Affichage du Stade et de la Ville */}
              <div class="flex items-center gap-1 mb-4 text-gray-400">
                <span class="text-[9px] font-bold uppercase tracking-tight italic">
                  üìç {game.stadium} ‚Ä¢ {game.location}
                </span>
              </div>

              <div class="flex items-center justify-between w-full">
                <div class="flex flex-col items-center flex-1">
                  <img src="https://static.www.nfl.com/t_q-best/league/api/clubs/logos/MIA" class="w-12 h-12" alt="Dolphins" />
                  <span class="text-[10px] font-bold mt-2 uppercase text-gray-400">Dolphins</span>
                </div>

                <div class="flex flex-col items-center px-4">
                  <span class={`text-2xl font-black ${game.result === 'W' ? 'text-[#008e97]' : 'text-slate-800'}`}>
                    {game.scorePhins} - {game.scoreOpp}
                  </span>
                  <span class="text-[9px] text-gray-400 uppercase">{game.date}</span>
                </div>

                <div class="flex flex-col items-center flex-1">
                  <img src={game.logo} class="w-12 h-12" alt={game.opponent} />
                  <span class="text-[10px] font-bold mt-2 uppercase text-gray-400 text-center">{game.opponent.split(' ').pop()}</span>
                </div>
              </div>

              {/* Buteurs */}
              {game.scorers && (
                <div class="mt-4 flex flex-wrap justify-center gap-1">
                  {game.scorers.map((player) => (
                    <span class="text-[8px] font-bold text-gray-500 bg-gray-50 border px-2 py-0.5 rounded">üèà {player}</span>
                  ))}
                </div>
              )}

              {/* Lien Analyse */}
              <div class="mt-auto w-full border-t border-gray-50 pt-4 text-center">
                {game.slug ? (
                  <a href={`/blog/${game.slug}`} class="text-[9px] font-bold uppercase text-[#008e97] hover:underline">Lire l'Analyse ‚Üí</a>
                ) : (
                  <span class="text-[9px] font-bold uppercase text-gray-300">Analyse bient√¥t</span>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </details>

    {/* Section Archives 2024-2025 (Repli√©e par d√©faut) */}
    <details class="group">
      <summary class="list-none cursor-pointer">
        <div class="flex items-center gap-4 mb-8 opacity-60">
          <h2 class="text-2xl font-bold border-2 border-gray-300 text-gray-500 px-4 py-1 skew-x-[-12deg]">2024 - 2025</h2>
          <div class="h-[2px] flex-grow bg-gray-200"></div>
          <span class="text-sm font-bold text-gray-400 group-open:rotate-180 transition-transform">‚ñº</span>
        </div>
      </summary>
      <div class="bg-gray-50 rounded-xl p-10 text-center border-2 border-dashed border-gray-200">
        <p class="text-gray-500 italic">Les archives de la saison 2024 arrivent bient√¥t sur PhinsUp France.</p>
      </div>
    </details>

  </main>
</Layout>